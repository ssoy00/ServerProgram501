<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<!--  전체 디비, 특정 설정등 등록-->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/root-context.xml</param-value>
  </context-param>
  
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

<!--  스프링 mvc 관련 설정을 등록하기, 서블릿 관련 설정-->
  <servlet>
    <servlet-name>appServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/servlet-context.xml</param-value>
    </init-param>
<!--    404 not found 발생시, 전달할 페이지 위치 등록-->
    <init-param>
      <param-name>throwExceptionIfNoHandleFound</param-name>
      <param-value>true</param-value>
    </init-param>

<!--    서블릿 파일 , 스프링 서버 시작시, 같이 로드 하겠다라는 의미-->
    <load-on-startup>1</load-on-startup>
  </servlet>

<!--  위의 설정을 적용할 범위. 예) http://localhost:8080/ -> / -->
  <servlet-mapping>
    <servlet-name>appServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

<!--  웹브라우저에서는 한글이 안깨지지만, 서버에 들어오면 인코딩 타입이 틀려서 한글 깨짐. -->
<!--  서버에서, 늘 들어오는 데이터에 대해서, utf-8 로 항상 설정해주는 기능. -->
  <filter>
    <filter-name>
      encoding
    </filter-name>
    <filter-class>
      org.springframework.web.filter.CharacterEncodingFilter
    </filter-class>

    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>encoding</filter-name>
    <servlet-name>appServlet</servlet-name>
  </filter-mapping>


</web-app>
